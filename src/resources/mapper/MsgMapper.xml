<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hjh.dao.MsgDao">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.hjh.entity.Msg">
        <id column="msg_id" property="msgId"/>
        <result column="title" property="title"/>
        <result column="status" property="status"/>
        <result column="content" property="content"/>
        <result column="create_user_id" property="createUserId"/>
        <result column="create_time" property="createTime"/>
        <result column="modify_time" property="modifyTime"/>
        <result column="create_user_name" property="createUserName"/>
        <collection property="picFiles" ofType="com.hjh.entity.PicFile">
            <id property="picId" column="pic_id"/>
            <result column="path" property="path"/>
        </collection>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        msg_id AS msgId, title, content, status, create_time AS createTime, modify_time AS modifyTime
    </sql>


    <select id="selectMsg" resultMap="BaseResultMap">
        SELECT
        m.*,
        u.`name` AS create_user_name,
        p.path,
        p.pic_id
        FROM
        msg m
        LEFT JOIN t_user u ON m.create_user_id = u.user_id
        LEFT JOIN pic_file p ON (p.busness_id=m.msg_id AND p.type=5)
        <where>
            u.`status` = 1
            AND m.`status` =1
        </where>
        limit #{index}, #{pageSize};
    </select>
    <select id="selectMsgCount" resultType="long">
        SELECT count(*)
        FROM
        msg m
        LEFT JOIN t_user u ON m.create_user_id = u.user_id
        LEFT JOIN pic_file p ON (p.busness_id=m.msg_id AND p.type=5)
        <where>
            u.`status` = 1
            AND m.`status` =1
        </where>
    </select>
</mapper>
